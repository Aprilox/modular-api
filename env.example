# ============================================
# MODULAR API - Configuration
# ============================================
# Copiez ce fichier en .env et modifiez les valeurs

# ============================================
# DATABASE
# ============================================
# Choisissez UN des providers ci-dessous :
#
# SQLite (local, aucune installation requise) :
# DATABASE_URL="file:./data.db"
#
# PostgreSQL :
# DATABASE_URL="postgresql://user:password@localhost:5432/modular_api"
#
# MySQL :
# DATABASE_URL="mysql://user:password@localhost:3306/modular_api"
#
# MariaDB :
# DATABASE_URL="mysql://user:password@localhost:3306/modular_api"

DATABASE_URL="file:./data.db"

# ============================================
# SERVER
# ============================================
PORT=3000
HOST=0.0.0.0

# ============================================
# CODE EXECUTION
# ============================================
# Timeout pour l'execution de code (en millisecondes)
CODE_TIMEOUT=5000

# Chemin vers l'executable Python (pour les scripts Python)
PYTHON_PATH=python

# Activer/desactiver l'execution de code par langage
ENABLE_JAVASCRIPT=true
ENABLE_PYTHON=true
ENABLE_BASH=true

